<!-- app/views/shared/_navbar.html.erb -->

<nav class="navbar">
  <ul class="navbar-list">
    <li><%= link_to 'Home', root_path %></li>
    <li><%= link_to 'About Us', about_us_path %></li>
    <li><%= link_to 'Contact Us', contact_us_path %></li>
    <li><%= link_to 'Products', products_path %></li>
    <li><%= link_to 'Cart', cart_path %></li>
  </ul>
  <div class="search-bar">
    <%= form_tag(products_path, method: :get) do %>
      <%= text_field_tag(:query, params[:query], placeholder: 'Search by name, status, gender, etc.') %>

      <!-- Dropdown list for status -->
      <%= select_tag(:status, options_for_select(['', 'Alive', 'Dead', 'unknown'], params[:status]), include_blank: 'All Status') %>

      <!-- Dropdown list for gender -->
      <%= select_tag(:gender, options_for_select(['', 'Female', 'Male', 'genderless', 'unknown'], params[:gender]), include_blank: 'All Gender') %>

      <%= submit_tag('Search') %>
    <% end %>
  </div>
</nav>
