<h1>Rick and Morty Collectibles</h1>

<%= render 'shared/navbar' %> <!-- Include the navbar from a shared partial -->

<%= render 'shared/navbar_home' %> <!-- Include the larger navbar -->

<% if @characters.any? %>
  <div class="cards-container">
    <% @characters.each do |character| %>
        <div class="card">
          <%= image_tag(character.image) %>
          <div class="card-details">
            <h2><%= character.name %></h2>
            <p class="status" data-status="<%= character.status %>">Status: <%= character.status %></p>
            <p>Gender: <%= character.gender %></p>
            <% if character.location.present? %>
              <p>Location: <%= character.location %></p>
            <% else %>
              <p>Location: Unknown</p>
            <% end %>
            <p class="price">Price: <%= character.price %></p>
            <a href="#" class="card-link" data-character-id="<%= character.id %>">view</a>
            <%= button_to "Add to Cart", add_to_cart_path(character_id: character.id), method: :post %>
          </div>
        </div>

    <% end %>
  </div>
  <%= paginate @characters %>
<% else %>
  <p>No results found.</p>
<% end %>

<!-- Modal to display character details -->
<div id="character-details-modal" style="display: none;">
  <div class="modal-content">
    <h2 id="character-name"></h2>
    <p class="status" id="character-status"></p>
    <p id="character-gender"></p>
    <p id="character-location"></p>
    <p class="price" id="character-price"></p>
  </div>
</div>

<div class="overlay"></div>
<div class="card-center"></div>
