<!-- app/views/products/cart.html.erb -->
<h1>Rick and Morty Collectibles</h1>

<%= render 'shared/navbar' %>
<h1>Products</h1>

<h1>Your Cart</h1>

<% if @cart_items.any? %>
  <ul>
    <% @cart_items.each do |character| %>
      <li>
        <%= character.name %> x <%= character.cart_items_quantity %>
        <%= link_to "Remove", remove_from_cart_path(character_id: character.id), method: :delete %>
      </li>
    <% end %>
  </ul>
  <%= link_to "Checkout", checkout_path %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
